<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59AAB5"
    android:padding="10dp"
    tools:context=".SignUpActivity">
    <TextView
        android:id="@+id/signUp"
        android:layout_marginTop="100dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="SignUp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="20dp"
        android:id="@+id/email"
        android:layout_marginTop="60dp"
        android:hint="Email Id"
        android:padding="10dp"
        android:layout_below="@+id/signUp"
        android:layout_width="match_parent"
        android:background="@drawable/ed_background"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="20dp"
        android:id="@+id/password"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:padding="10dp"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:background="@drawable/ed_background"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="20dp"
        android:id="@+id/conformPassword"
        android:layout_marginTop="20dp"
        android:hint="Conform Password"
        android:padding="10dp"
        android:layout_below="@+id/password"
        android:layout_width="match_parent"
        android:background="@drawable/ed_background"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createAccount"
        android:layout_marginTop="60dp"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/button_bg"
        android:layout_below="@+id/conformPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/already"
        android:layout_marginTop="15dp"
        android:layout_below="@id/createAccount"
        android:text="Already have been an account?"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createAccount"
        android:layout_alignRight="@+id/already"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_marginRight="-50dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>